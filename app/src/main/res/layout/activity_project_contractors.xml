<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Contractors"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Cons"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Main Contractor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_mainContractor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_main"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="10dp"
                android:text="Pick Main Contractor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_mainContractor"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:id="@+id/tv_civil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view_main"
                android:layout_margin="20dp"
                android:text="Civil Contractor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_civilContractor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_civil"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="10dp"
                android:text="Pick Civil Contractor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_civilContractor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_civilContractor"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:id="@+id/tv_mechanical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view_civilContractor"
                android:layout_margin="20dp"
                android:text="Mechanical Contractor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_mechContractor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mechanical"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="10dp"
                android:text="Pick Mechanical Contractor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_mechContractor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_mechContractor"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:id="@+id/tv_electrical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view_mechContractor"
                android:layout_margin="20dp"
                android:text="Electrical Contractor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPickElectContractor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_electrical"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="10dp"
                android:text="Pick Electrical Engineer" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_electContractor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnPickElectContractor"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:id="@+id/tv_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view_electContractor"
                android:layout_margin="20dp"
                android:text="Others"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPickOtherContractors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_others"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="10dp"
                android:text="Pick Any Other" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_otherContractors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnPickOtherContractors"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btn_profNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view_otherContractors"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Next" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
