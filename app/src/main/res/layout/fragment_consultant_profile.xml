<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultantModule.ConsultantProfile">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:padding="5dp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/Consultant_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/person"
                android:gravity="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Name: "
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cons_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignEnd="@+id/tv_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="-160dp"
                    android:text=""
                    android:textSize="17sp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:id="@+id/tv_employ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cons_name"
                    android:layout_alignStart="@+id/tv_name"
                    android:layout_marginTop="10dp"
                    android:text="Employment Type: "
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cons_employ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_employ"
                    android:layout_alignStart="@+id/cons_name"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="17sp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:id="@+id/tv_specs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cons_employ"
                    android:layout_alignStart="@+id/tv_name"
                    android:layout_marginTop="10dp"
                    android:text="Specialization "
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cons_specs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_specs"
                    android:layout_alignStart="@+id/cons_name"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="17sp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:id="@+id/tv_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cons_specs"
                    android:layout_alignStart="@+id/tv_name"
                    android:layout_marginTop="10dp"
                    android:text="Location: "
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cons_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_loc"
                    android:layout_alignStart="@+id/cons_name"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="17sp"
                    android:textStyle="normal|italic" />


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>