<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Architects"
            android:textColor="#000"
            android:textSize="30sp"
            android:padding="10dp"
            android:fontFamily="@font/bungee"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/Architects"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/but3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:padding="25dp"
                    android:text="Architects Details"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_architects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here to view"
                    android:textColor="#000"
                    android:background="#00000000"
                    android:textAllCaps="false"
                    android:textStyle="italic"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/architect" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contractors"
            android:textColor="#000"
            android:textSize="30sp"
            android:padding="10dp"
            android:fontFamily="@font/bungee"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/Contractors"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/but3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:padding="25dp"
                    android:text="Contractor Details"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_contractors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here to view"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:background="#00000000"
                    android:textStyle="italic"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/architect" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constructors"
            android:textColor="#000"
            android:textSize="30sp"
            android:padding="10dp"
            android:fontFamily="@font/bungee"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/Constructors"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/but3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:padding="25dp"
                    android:text="Constructor Details"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_constryctors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here to view"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:background="#00000000"
                    android:textStyle="italic"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/architect" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engineers"
            android:textColor="#000"
            android:textSize="30sp"
            android:padding="10dp"
            android:fontFamily="@font/bungee"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/Engineers"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/custom_button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:padding="25dp"
                    android:text="Engineers Details"
                    android:textColor="@color/colorGradient1"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_engineers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here to view"
                    android:textAllCaps="false"
                    android:textColor="@color/colorGradient1"
                    android:background="#00000000"
                    android:textStyle="italic"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-10dp"
                android:src="@drawable/engineer" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:padding="10dp"
            android:text="Surveyors"
            android:textColor="#000"
            android:textSize="30sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/surveyors"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/but3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:padding="25dp"
                    android:text="Surveyors Details"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_surveyors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here to view"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:background="#00000000"
                    android:textStyle="italic"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-10dp"
                android:src="@drawable/survey" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialists"
            android:textColor="#000"
            android:textSize="30sp"
            android:padding="10dp"
            android:fontFamily="@font/bungee"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/Specialists"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/but3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:padding="25dp"
                    android:text="Specialists Details"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_specialists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here for Details"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:background="#00000000"
                    android:textStyle="italic"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/architect" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>