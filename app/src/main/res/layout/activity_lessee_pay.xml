<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transactions.TransactionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_Pay"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLayout"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:text="Pay via PayPal"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_Pay"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="OR" />

        <Button
            android:id="@+id/btn_Mpesa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Lipa na Mpesa"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_Mpesa"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="Transactions List" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_margin="20dp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>