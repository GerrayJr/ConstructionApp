<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LesseeModule.FacilityInformation">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fInfo_imageView"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Facility Name: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fInfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_name"
                android:layout_marginEnd="-160dp"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fInfo_name"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="20dp"
                android:text="Authority Name: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fInfo_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fInfo_name"
                android:layout_alignStart="@+id/fInfo_name"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/tv_auth"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_auth"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="20dp"
                android:text="Facility Manager: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fInfo_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fInfo_auth"
                android:layout_alignStart="@+id/fInfo_name"
                android:layout_marginTop="20dp"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_manager"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="20dp"
                android:text="Postal Address: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fInfo_postal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fInfo_manager"
                android:layout_alignStart="@+id/fInfo_name"
                android:layout_marginTop="20dp"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="20dp"
                android:text="Email Address: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fInfo_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fInfo_postal"
                android:layout_alignStart="@+id/fInfo_name"
                android:layout_marginTop="20dp"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_email"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="20dp"
                android:text="Activity Description: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fInfo_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fInfo_email"
                android:layout_alignStart="@+id/fInfo_name"
                android:layout_marginTop="20dp"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_occupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_activity"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="20dp"
                android:text="Occupancy "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fInfo_occupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fInfo_activity"
                android:layout_alignStart="@+id/fInfo_name"
                android:layout_marginTop="20dp"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_contact"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                android:text="Contact Facility" />

            <Button
                android:id="@+id/btn_exit_fInfo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_style"
                android:text="EXIT TO MAP" />
        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>