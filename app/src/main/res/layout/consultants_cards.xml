<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/parentRelative"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_ConsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Name: "
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_ConsName"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-60dp"
            android:text=""
            android:textSize="17sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/tv_consCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ConsName"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Category: "
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consCardCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ConsName"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-70dp"
            android:layout_toEndOf="@+id/tv_consCat"
            android:text=""
            android:textSize="17sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/tv_consLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_consCat"
            android:layout_alignStart="@+id/tv_consCat"
            android:layout_marginTop="10dp"
            android:text="Location: "
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consCardLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_consCat"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-70dp"
            android:layout_toEndOf="@+id/tv_consCat"
            android:text=""
            android:textSize="17sp"
            android:textStyle="normal|italic" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>