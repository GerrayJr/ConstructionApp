<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:fadeScrollbars="false"
    android:padding="5dp"
    android:scrollbars="vertical"
    tools:context=".ManagerModule.WorkOrder.WorkPopUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/asset_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Work: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ed_pop_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_work"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />



            <TextView
                android:id="@+id/tv_consultant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_work"
                android:layout_alignStart="@+id/tv_work"
                android:layout_marginTop="15dp"
                android:text="Contractor: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ed_pop_consultant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_pop_work"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/tv_consultant"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_consultant"
                android:layout_alignStart="@+id/tv_work"
                android:layout_marginTop="15dp"
                android:text="Date Posted"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ed_pop_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_pop_consultant"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/tv_date"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_alignStart="@+id/tv_work"
                android:layout_marginTop="15dp"
                android:text="Status: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ed_pop_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_pop_date"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/tv_status"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status"
                android:layout_alignStart="@+id/tv_work"
                android:layout_marginTop="15dp"
                android:text="Cost: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ed_pop_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_pop_status"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/tv_cost"
                android:text=""
                android:textSize="17sp"
                android:textStyle="normal|italic" />

        </RelativeLayout>

        <Button
            android:id="@+id/delete_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="Delete Work" />

    </LinearLayout>
</ScrollView>